<!-- views/index.ejs -->
<!doctype html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body>
    <header>
        <% include ../partials/header %>
    </header>
    <main>
        <script src="../js/comun.js"></script>
        <script src="../js/mantUnidadApp.js"></script>

        <div class="container" ng-app="MantUnidadApp" ng-controller="MainController">
            <span us-spinner="{radius:30, width:8, length: 16}"></span>
            <h6>{{usuario.local.email}}</h6>
            <h3>{{organizacion.razon_social}}</h3>
            <!-- -->
            <h4>Lista de Unidades</h4>
            <button type="button" name="btnNuevo" class="btn btn-success" ng-click="mostrarCrearPopup()"><span class="fa fa-plus"></span> Nueva Unidad</button>
            <hr/>
            <table class="table table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th>
                            Unidad
                        </th>
                        <th>
                            Placa
                        </th>
                        <th>
                            Tipo
                        </th>
                        <th>
                            Asignado A
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="u in listaUnidades">
                        <td>
                            {{u.properties.identificador}}
                        </td>
                        <td>
                            {{u.properties.placa}}
                        </td>
                        <td>
                            {{u.properties.tipo}}
                        </td>
                        <td>
                            {{u.properties.asignado.local.email}}
                        </td>
                        <td>
                            <button type="button" name="btnEditar" class="btn btn-primary" ng-click="mostrarEditarPopup(u)"><span class="fa fa-pencil-square-o"></span> Editar</button>
                            <button type="button" name="btnEliminar" class="btn btn-danger"><span class="fa fa-times"></span> Eliminar</button>
                        </td>
                    </tr>
                </tbody>
            </table>



            <!-- TEMPLATES-->
            <!-- Crear Unidad-->
            <script type="text/ng-template" id="popupCrearUnidad.html">
                <div class="modal-header">
                    <h3 class="modal-title">Crear nueva unidad</h3>
                </div>
                <div class="modal-body">

                    <div class="row">
                      <div class="form-group">
                        <label for="txtIdentificador">Denominaci√≥n Unidad</label>
                        <input type="text" name="txtIdentificador" id="txtIdentificador" class="form-control" ng-model="unidad.properties.identificador">
                      </div>
                      <div class="form-group">
                        <label for="txtPlaca">Matricula</label>
                        <input type="text" name="txtPlaca" id="txtPlaca" class="form-control">
                      </div>
                      <div class="form-group">
                        <label for="cmbTipo">Tipo</label>
                        <select class="form-control" name="cmbTipo" id="cmbTipo">
                            <option value="Bus">Auto</option>
                            <option value="Bus">Bus</option>
                            <option value="Bus">Camion</option>
                            <option value="Bus">Motocicleta</option>
                            <option value="Bus">Bicicleta</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="txtAsignadoId">Usuario Asignado</label>
                        <input type="text" name="txtAsignadoId" id="txtAsignadoId" class="form-control">
                      </div>
                      <div class="form-group">
                        <label for="txtFecharegistro">Fecha de Registro</label>
                        <input type="text" name="txtFecharegistro" id="txtFecharegistro" class="form-control">
                      </div>

                    </div>

                </div>
                <div class="modal-footer">
                  <button type="button" name="btnGuardarUnidad" class="btn btn-primary" ng-click="guardar()"><span class="fa fa-floppy-o"></span> Guardar</button>
                  <button type="button" name="btncancelar" class="btn btn-warning" ng-click="cancelar()"><span class="fa fa-times"></span> Cancelar</button>
                </div>

            </script>








        </div>


    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>
